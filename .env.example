# Cardinal Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3000

# Proxmox Configuration
PROXMOX_HOST=your-proxmox-host.example.com
PROXMOX_PORT=8006
PROXMOX_USERNAME=your-username
PROXMOX_PASSWORD=your-password
PROXMOX_NODE=your-node-name

# Container Defaults
CT_DEFAULT_OSTEMPLATE=ubuntu-22.04-standard_22.04-1_amd64.tar.zst
CT_DEFAULT_CORES=2
CT_DEFAULT_MEMORY=2048
CT_DEFAULT_DISK=8
CT_DEFAULT_USERNAME=root
CT_DEFAULT_PASSWORD=your-default-container-password

# Security (Generate strong random keys)
ENCRYPTION_KEY=your-32-character-encryption-key
JWT_SECRET=your-jwt-secret-key
WEBHOOK_SECRET=your-webhook-secret-key

# Database
DB_PATH=/app/data/cardinal.db
