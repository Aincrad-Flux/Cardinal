# Cardinal Environment Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Proxmox Configuration
PROXMOX_HOST=your-proxmox-host.com
PROXMOX_PORT=8006
PROXMOX_USERNAME=your-proxmox-username
PROXMOX_PASSWORD=your-proxmox-password
PROXMOX_NODE=your-proxmox-node

# Container Default Configuration
CT_DEFAULT_OSTEMPLATE=ubuntu-22.04-standard_22.04-1_amd64.tar.zst
CT_DEFAULT_CORES=2
CT_DEFAULT_MEMORY=2048
CT_DEFAULT_DISK=8
CT_DEFAULT_PASSWORD=default-ct-password
CT_DEFAULT_USERNAME=root

# Security
ENCRYPTION_KEY=your-32-character-encryption-key-here
JWT_SECRET=your-jwt-secret-key

# Database
DB_PATH=./data/cardinal.db

# Webhook Security
WEBHOOK_SECRET=your-webhook-secret-key
